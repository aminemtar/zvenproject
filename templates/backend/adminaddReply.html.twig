{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

    <div id="wrapper">
        <div class="main-content">
            <div class="row small-spacing">

                <!-- /.col-lg-6 col-xs-12 -->

                <div class="">
                    <div class="box-content card white">
                        <h4 class="box-title">Horizontal form</h4>
                        <!-- /.box-title -->
                        <div class="card-content">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label>Titre de votre reclamation</label>
                                    {% if form_errors(form.titre) is not null %}
                                        <div class="error_message">
                                            {{ form_errors(form.titre) }}
                                        </div>
                                    {% endif %}
                                    <input class="form-control" type="text" aria-readonly="false" autocomplete="off" {{ form_widget(form.titre,{'attr':{'placeholder':'titre'}}) }}


                                </div>
                                <div class="form-group">
                                    <label>Votre r√©ponse</label>
                                    {{ form_errors(form.description) }}
                                    <textarea class="form-control" style="height: 180px;" placeholder="Ecrire votre reponse ici!!" {{ form_widget(form.description,{'attr':{'placeholder':'description','class':'description'}}) }}</textarea>

                                </div>
                                <div class="clearfix add_bottom_15">
                                <div class="form-group">
                                    <div class="">
                                        <button type="submit" class="btn btn-info btn-sm waves-effect waves-light">Repondre</button>
                                        <a href="{{ path('app_backend_reclamation') }}" type="submit" class="btn btn-info btn-sm waves-effect waves-light">Annuler</a>
                                    </div>
                                    {{ form(form,{'method':'GET'}) }}
                                </div>

                                </div>
                                {{ form_end(form) }}

                            </form>
                        </div>
                        <!-- /.card-content -->
                    </div>
                    <!-- /.box-content -->
                    <!-- /.box-content card white -->
                </div>
                <!-- /.col-lg-6 col-xs-12 -->
            </div>

        </div>
        <!-- /.main-content -->
    </div><!--/#wrapper -->
{% endblock %}



