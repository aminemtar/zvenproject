                    <h4>Reviews</h4>
                    <div class="row add_bottom_30 d-flex align-items-center reviews">
                        <div class="col-md-3">
                            <div id="review_summary">
                                {% for r in reclamation %}
                                    {% if r.restaurant.id==restaurant.id %}
                                        {% set food = food + r.foodqulaite %}
                                        {% set price = price + r.price %}
                                        {% set service = service + r.service %}

                                        {% set s=s+1 %}

                                    {% endif %}


                                {% endfor %}
                                {% if s==0 %}
                                    <strong> - </strong>
                                {% else %}
                                    <strong>{{ (((food/s)+(price/s)+(service/s))/3)|number_format('1') }}</strong>
                                {% endif %}
                                {#  <em>Superb</em> #}
                                <small>Based on 3 reviews</small>

                            </div>
                        </div>
