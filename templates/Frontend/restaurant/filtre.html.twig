<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="FooYes - Quality delivery or takeaway food">
    <meta name="author" content="Ansonika">
    <title>Restaurants</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="{{ asset('frontoffice/img/favicon.ico') }}" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="{{ asset('frontoffice/img/apple-touch-icon-57x57-precomposed.png') }}">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="{{ asset('frontoffice/img/apple-touch-icon-72x72-precomposed.png') }}">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="{{ asset('frontoffice/img/apple-touch-icon-114x114-precomposed.png') }}">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="{{ asset('frontoffice/img/apple-touch-icon-144x144-precomposed.png') }}">
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {#{{ encore_entry_link_tags('app') }}#}
    <!-- GOOGLE WEB FONT -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- BASE CSS -->
    <link href="{{ asset('frontoffice/css/bootstrap_customized.min.css') }}" rel="stylesheet">
    <link href="{{ asset('frontoffice/css/style.css') }}" rel="stylesheet">

    <!-- SPECIFIC CSS -->
    <link href="{{ asset('/frontoffice/css/listing.css') }}" rel="stylesheet">

    <!-- YOUR CUSTOM CSS -->
    <link href="{{ asset('frontoffice/css/custom.css') }}" rel="stylesheet">


</head>
<body>

{{ include('Frontend/nav2.html.twig') }}
<!-- /header -->
{% set som=0 %}
<main>
    <div class="page_header element_to_stick">
        <div class="container">
            <div class="row">
                {% for r in restaurant %}
                    {% if r.status=="verified" %}

                        {% set som=som+1 %}



                    {% endif %}
                {% endfor %}
                <div class="col-xl-8 col-lg-7 col-md-7 d-none d-md-block">
                    <h1>{{ som }} restaurants in Convent Street 2983</h1>
                    <a href="#0">Change address</a>
                </div>
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="search_bar_list">
                        <input id="rechercherest"type="text" class="form-control" placeholder="restaurants et catagorie">
                        <button type="submit"><i class="icon_search"></i></button>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </div>
    </div>
    <!-- /page_header -->

    <div class="collapse" id="collapseMap">
        <div id="map" class="map"></div>
    </div>
    <!-- /Map -->

    <div class="container margin_30_20">
        <div class="row">
            <aside class="col-lg-3" id="sidebar_fixed">
                <a class="btn_map d-flex align-items-center justify-content-center" data-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap" ><span class="btn_map_txt" data-text-swap="Hide Map" data-text-original="View on Map">View on Map</span></a>
                <div class="type_delivery">
                    <ul class="clearfix">
                        <li>
                            <label class="container_radio">Delivery
                                <input type="radio" name="type_d" checked="checked">
                                <span class="checkmark"></span>
                            </label>
                        </li>
                        <li>
                            <label class="container_radio">Take away
                                <input type="radio" name="type_d">
                                <span class="checkmark"></span>
                            </label>
                        </li>
                    </ul>
                </div>
                <!-- /type_delivery -->

                <a class="btn_map mobile btn_filters" data-toggle="collapse" href="#collapseMap"><i class="icon_pin_alt"></i></a>
                <a href="#0" class="open_filters btn_filters"><i class="icon_adjust-vert"></i><span>Filters</span></a>

                <div class="filter_col">
                    <div class="inner_bt clearfix">Filters<a href="#" class="open_filters"><i class="icon_close"></i></a></div>
                    <div class="filter_type">
                        <h4><a href="#filter_1" data-toggle="collapse" class="opened">Sort</a></h4>
                        <div class="collapse show" id="filter_1">
                            <ul>
                                <li>
                                    <label class="container_radio">Top Rated
                                        <input type="radio" name="filter_sort" checked="">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_radio">Reccomended
                                        <input type="radio" name="filter_sort">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_radio">Price: low to high
                                        <input type="radio" name="filter_sort">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_radio">Up to 15% off
                                        <input type="radio" name="filter_sort">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_radio">All Offers
                                        <input type="radio" name="filter_sort">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_radio">Distance
                                        <input type="radio" name="filter_sort">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /filter_type -->
                    <div class="filter_type">
                        <h4><a href="#filter_2" data-toggle="collapse" class="closed">Categories</a></h4>
                        <div class="collapse" id="filter_2">
                            {#  <ul>
                                {% set newArray = [] %}
                                {% for r in restaurant %}

                                    {% if r.categorieRestaurant not in newArray %}

                                <li>
                                    <label  class="container_check">{{ r.categorieRestaurant}} <small></small>
                                        <input  type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>

                                </li>
                                        {% set newArray = newArray|merge([r.categorieRestaurant]) %}
                                    {% endif %}
                                {% endfor %}

                            </ul> #}
                            <ul>
                                <form action="{{ path('filtre') }}" class="search_trends">
                                    <select type="submit" name="searC" class="main__select" >
                                        <option value="">All categories</option>
                                        <option  value="chinois">chinois</option>
                                        <option  value="mexican">mexican</option>
                                        <option  value="fastfood">fastfood</option>
                                        <option  value="italien">italien</option>
                                        <option  value="burgers">burgers</option>
                                    </select>
                                    <input type="submit" value="Submit" >
                                </form>
                            </ul>
                        </div>
                    </div>
                    <!-- /filter_type -->
                    <div class="filter_type">
                        <h4><a href="#filter_3" data-toggle="collapse" class="closed">Distance</a></h4>
                        <div class="collapse" id="filter_3">
                            <div class="distance"> Radius around selected destination <span></span> km</div>
                            <div class="add_bottom_25"><input type="range" min="10" max="50" step="5" value="20" data-orientation="horizontal"></div>
                        </div>
                    </div>
                    <!-- /filter_type -->
                    <div class="filter_type last">
                        <h4><a href="#filter_4" data-toggle="collapse" class="closed">Rating</a></h4>
                        <div class="collapse" id="filter_4">
                            <ul>
                                <li>
                                    <label class="container_check">Superb 9+ <small>06</small>
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li> app.user
                                    <label class="container_check">Very Good 8+ <small>12</small>
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_check">Good 7+ <small>17</small>
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                                <li>
                                    <label class="container_check">Pleasant 6+ <small>43</small>
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /filter_type -->
                    <p><a href="#0" class="btn_1 outline full-width">Filter</a></p>
                </div>
            </aside>

            <div class="col-lg-9">
                <div class="row">
                    <div class="col-12">
                        <h2 class="title_small">Produits</h2>
                        <div class="owl-carousel owl-theme categories_carousel_in listing">
                            {% for p in prod.getProduits %}
                                <div class="item">
                                    <figure>
                                        <img src="{{asset('/uploads/' ~ p.nomImageProduit ) }}" data-src="{{asset('/uploads/' ~ p.nomImageProduit ) }}}" alt="" >
                                        <a href="#0"><h3>{{ p.nomProduit }}</h3></a>
                                    </figure>
                                </div>
                            {% endfor %}

                        </div>
                        <!-- /carousel -->
                    </div>
                </div>
                <!-- /row -->

                <div class="promo">
                    <h3>Free Delivery for your first 14 days!</h3>
                    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.</p>
                    <i class="icon-food_icon_delivery"></i>
                </div>
                <!-- /promo -->

                <div class="row">
                    <div class="col-12"><h2 class="title_small">Restaurants Partenaires</h2></div>
                    {% for r in restaurant %}
                        {% if r.status=='verified' %}
                            <div id="rest"class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                                <div class="strip">
                                    <figure>
                                        <span class="ribbon off">15% off</span>
                                        <img src="{{asset('/uploads/' ~ r.nomImage ) }}" data-src="{{asset('/uploads/' ~ r.nomImage ) }}" class="img-fluid lazy" alt="">
                                        <a href="{{ path('listbyrestaurant',{'id':r.id}) }}" class="strip_info">
                                            <small>{{ r.categorieRestaurant }}</small>
                                            <div class="item_title">
                                                <h3>{{ r.nomRestaurant }}</h3>
                                                <small>{{ r.addresse }} {{ r.cite }}</small>
                                            </div>
                                        </a>
                                    </figure>

                                </div>
                            </div>
                            <!-- /strip grid -->

                        {% endif %}
                    {% endfor %}

                </div>
                <!-- /row -->

            </div>
            <!-- /col -->
        </div>
    </div>
    <!-- /container -->
    {{ include('Frontend/login.html.twig') }}

</main>
</body>
</html>
<!-- /main -->
<script src="{{ asset('/frontoffice/js/common_scripts.min.js') }}"></script>
<script src="{{ asset('/frontoffice/js/common_func.js') }}"></script>
<script src="{{ asset('/frontoffice/assets/validate.js') }}"></script>

<!-- SPECIFIC SCRIPTS -->
<script src="{{ asset('/fronoffice/js/sticky_sidebar.min.js') }}"></script>
<script src="{{ asset('/frontoffice/js/specific_listing.js') }}"></script>
<!-- Map -->
<script src="{{ asset('/frontoffice/js/main_map_scripts.js')}}"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAYz4FigVGlFUwCHveAFUwOsl1OeXrSzsQ&callback=initMap"></script>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#rechercherest").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#rest ").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>






