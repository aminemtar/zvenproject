
{% extends 'base.html.twig' %}
{% block title %}Finaliser Commande {% endblock %}

{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    <!-- GOOGLE WEB FONT -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- BASE CSS -->
    <link href="{{ asset('frontoffice/css/bootstrap_customized.min.css') }}" rel="stylesheet">
    <link href="{{ asset('frontoffice/css/style.css') }}" rel="stylesheet">

    <!-- SPECIFIC CSS -->
    <link href="{{ asset('frontoffice/css/wizard.css') }}" rel="stylesheet">

    <!-- YOUR CUSTOM CSS -->
    <link href="{{ asset('frontoffice/css/custom.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <main>

        <div class="container margin_60_40" id="apply">

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="main_title center">
                        <span><em></em></span>
                        <h2>Finaliser Votre Commande</h2>
                        <p>avec zven vous pouvez tout faire</p>
                    </div>

                    <div id="wizard_container">
                        <div id="top-wizard">
                            <div id="progressbar"></div>
                        </div>
                        <!-- /top-wizard -->
                        <form id="wrapped" method="POST">
                            <input id="website" name="website" type="text" value="">
                            <!-- Leave for security protection, read docs for details -->
                            <div id="middle-wizard">
                                {{ form_start(form) }}

                                <div class="submit step">
                                    <h3 class="main_question">Finaliser Commande</h3>

 <div class="form-group">
                                     {{ form_label(form.adresseLivraison, null, {
                                            'label': 'Adresse de Livraison'    
                                        }) }}
                                        {{ form_widget(form.adresseLivraison,{'attr':{
                                            'placeholder':'Adresse de Livraison','class':'adresseLivraison'
                                        }}) }}
                                    </div>
                                   
                                    <div class="form-group">
                                    {{ form_label(form.modeLivraison, null, {
                                            'label': 'Mode de Livraison'    
                                        }) }}
                                        {{ form_widget(form.modeLivraison,{'attr':{
                                            'placeholder':'Mode de Livraison','class':'modeLivraison'
                                        }}) }}
                                    </div>
                                        <div class="form-group">
                                        {{ form_label(form.renseignement, null, {
                                            'label': 'Renseignement'    
                                        }) }}
                                        {{ form_widget(form.renseignement,{'attr':{
                                            'placeholder':'Renseignement','class':'renseignement'
                                        }}) }}
                                    </div>
                                      <div class="form-group">
                                       {{ form_label(form.totalCommande, null, {
                                            'label': 'Prix Commande en Dinars'    
                                        }) }}
                                        {{ form_widget(form.totalCommande ,{'attr':{'readonly':'1',
                                            'placeholder':'Prix Commande','class':'Prix Commande'
                                        }}) }}
                                    </div>
                                     <div class="form-group">  <h3 class="main_question">Vous avez un code coupon ?</h3></div>

                                        <div class="form-group">
                                      
                                        {{ form_widget(form.code.code,{'attr':{
                                            'placeholder':'Code Coupon','class':'Code Coupon'
                                        }}) }}
                                         
                                    </div>
                                                           
                                    <!-- /row -->

                                </div>
                                <!-- /step-->

                            </div>
                            <!-- /middle-wizard -->
                            <div id="bottom-wizard">
                                <button type="button" name="backward" class="backward">Prev</button>
                                <button type="button" name="forward" class="forward">Next</button>
                                <button type="submit" name="process" class="submit">Submit</button>




                            </div>

                            <!-- /bottom-wizard -->
                        </form>
                        {{ form_end(form) }}
                    </div>
                    <!-- /Wizard container -->
                </div>
                <!-- /col -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->

    </main>




{% endblock body %}

{% block javascripts %}
    <!-- COMMON SCRIPTS -->
    <script src="{{ asset('frontoffice/js/common_scripts.min.js') }}"></script>
    <script src="{{ asset('frontoffice/js/common_func.js') }}"></script>
    <script src="{{ asset('frontoffice/assets/validate.js') }}"></script>

    <!-- SPECIFIC SCRIPTS -->
    <script src="{{ asset('frontoffice/js/wizard/wizard_scripts.js') }}"></script>
    <script src="{{ asset('frontoffice/js/wizard/wizard_func.js') }}"></script>

{% endblock %}
